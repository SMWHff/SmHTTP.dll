                    ProxyID = v
                End If
            Case Utils.ArgumentsMatch(v, vbString, "^(同步|异步)$", SavaArg:=SyncAsync)
                SyncAsync = (v = "异步")
            Case Utils.ArgumentsMatch(v, vbString, "^(开启|关闭)补全$", SavaArg:=CompHeaders)
                CompHeaders = (v <> "关闭补全")
            Case Utils.ArgumentsMatch(v, vbString, "^(开启|关闭)合并$", SavaArg:=CompCookies)
